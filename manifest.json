{
  "manifest_version": 3,
  "name": "X Bot Remover",
  "version": "2025.11.1",
  "description": "Automates removal of X (Twitter) Bot followers from your own account. Uses adjustable rules to identify bots",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "src/pages/background/index.ts"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon-32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "src/pages/options/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "src/pages/content/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*"
      ],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ]
    }
  ]
}
